@model MovieApp.Entity.TheatreModel
@{
    ViewData["Title"] = "UpdateTheatre";
}

<h1>UpdateTheatre</h1>

<form method="post">
    <div class="form-group">
        <label for="fName">TheatreNamee:</label>
        <input type="text" class="form-control" id="fname" asp-for="TheatreName">
    </div>
    <div class="form-group">
        <label for="lName">Capacity:</label>
        <input type="text" class="form-control" id="lname" asp-for="Capacity">
    </div>
    <div class="form-group">
        <label for="contact">City:</label>
        <input type="text" class="form-control" id="contact" asp-for="City">
    </div>
    <div class="form-group">
        <label for="email">Description:</label>
        <input type="text" class="form-control" id="email" asp-for="Description">
    </div>
   
    <button type="submit" class="btn btn-primary">Update</button>
    <button type="reset" class="btn btn-secondary">Reset</button>
</form>

@if (ViewBag.status == "Success")
{
    <div class="alert alert-success">@ViewBag.message</div>
}
else
{
    <div class="alert alert-danger">@ViewBag.message</div>
}
